{% extends 'base.html.twig' %}

{% block title %}Nouveau mot de passe{% endblock %}

{% block body %}
<div class="bg-white dark:bg-gray-900">
    <div class="flex justify-center min-h-screen py-12">
        <div class="flex items-center w-full max-w-md px-6 mx-auto">
            <div class="flex-1">
                <div class="text-center">
                    <img class="w-64 mx-auto mb-8" src="{{ asset('images/logo.png') }}" alt="logo">
                    <h1 class="text-2xl font-semibold text-gray-900 mb-2">Nouveau mot de passe</h1>
                    <p class="text-sm text-gray-600">Choisissez un nouveau mot de passe pour votre compte</p>
                </div>

                <div class="mt-8">
                    {% for message in app.flashes('reset_password_error') %}
                        <div class="rounded-md bg-red-50 p-4 mb-4">
                            <div class="flex">
                                <div class="flex-shrink-0">
                                    <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
                                    </svg>
                                </div>
                                <div class="ml-3">
                                    <p class="text-sm font-medium text-red-800">{{ message }}</p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}

                    {% if resetForm.vars.errors|length > 0 or resetForm.plainPassword.first.vars.errors|length > 0 or resetForm.plainPassword.second.vars.errors|length > 0 %}
                        <div class="rounded-md bg-red-50 p-4 mb-4 border border-red-200">
                            <div class="flex">
                                <div class="m-2 text-sm text-red-700">
                                    <ul class="ml-4 list-disc space-y-1 pl-5">
                                        {% for error in resetForm.vars.errors %}
                                            <li>{{ error.message }}</li>
                                        {% endfor %}
                                        {% for error in resetForm.plainPassword.first.vars.errors %}
                                            <li>{{ error.message }}</li>
                                        {% endfor %}
                                        {% for error in resetForm.plainPassword.second.vars.errors %}
                                            <li>{{ error.message }}</li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    {% endif %}

                    {{ form_start(resetForm, {'attr': {'class': 'space-y-6'}}) }}
                        <div>
                            <label for="{{ resetForm.plainPassword.first.vars.id }}" class="block text-sm font-medium leading-6 text-gray-900">
                                Nouveau mot de passe
                            </label>
                           
                            <div class="mt-2">
                                {{ form_widget(resetForm.plainPassword.first, {
                                    'attr': {
                                        'class': resetForm.plainPassword.first.vars.errors|length > 0 ? 'input error' : 'input',
                                        'placeholder': '********'
                                    }
                                }) }}
                            </div>
                        </div>

                        <div>
                            <label for="{{ resetForm.plainPassword.second.vars.id }}" class="block text-sm font-medium leading-6 text-gray-900">
                                Confirmer le mot de passe
                            </label>
                           
                            <div class="mt-2">
                                {{ form_widget(resetForm.plainPassword.second, {
                                    'attr': {
                                        'class': resetForm.plainPassword.second.vars.errors|length > 0 ? 'input error' : 'input',
                                        'placeholder': '********'
                                    }
                                }) }}
                            </div>
                        </div>

                        <button type="submit" class="button button-primary w-full uppercase">
                            RÃ©initialiser le mot de passe
                        </button>
                    {{ form_end(resetForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
