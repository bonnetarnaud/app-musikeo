{% block main_content %}
<div class="p-6">
    <!-- Header -->
    <div class="mb-8">
        <div class="flex items-center gap-4 mb-4">
            <a href="{{ path('app_instrument_show', {id: instrument.id}) }}" 
               class="text-gray-600 hover:text-gray-900 transition-colors">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
            </a>
            <h1 class="text-3xl font-bold text-gray-900">Louer un instrument</h1>
        </div>
        <p class="text-gray-600">{{ instrument.brand }} {{ instrument.model }} - N° série: {{ instrument.serialNumber }}</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Formulaire de location -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-6">Informations de location</h2>
            
            <form method="post" class="space-y-6">
                <div>
                    <label for="student_id" class="block text-sm font-medium text-gray-700 mb-2">
                        Étudiant *
                    </label>
                    <select name="student_id" id="student_id" required 
                            class="w-full form-select rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
                        <option value="">Sélectionnez un étudiant</option>
                        {% for student in students %}
                            <option value="{{ student.id }}">
                                {{ student.fullName }} ({{ student.email }})
                            </option>
                        {% endfor %}
                    </select>
                    {% if students|length == 0 %}
                        <p class="text-sm text-red-600 mt-1">
                            Aucun étudiant disponible. Vous devez d'abord inscrire des étudiants.
                        </p>
                    {% endif %}
                </div>

                <div>
                    <label for="monthly_price" class="block text-sm font-medium text-gray-700 mb-2">
                        Prix mensuel (€) *
                    </label>
                    <input type="number" name="monthly_price" id="monthly_price" 
                           step="0.01" min="0" required
                           class="w-full form-input rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
                           placeholder="Ex: 25.00">
                </div>

                <div>
                    <label for="notes" class="block text-sm font-medium text-gray-700 mb-2">
                        Notes (optionnel)
                    </label>
                    <textarea name="notes" id="notes" rows="3"
                              class="w-full form-textarea rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
                              placeholder="Conditions particulières, accessoires inclus..."></textarea>
                </div>

                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                    <div class="flex">
                        <svg class="w-5 h-5 text-blue-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-blue-800">À propos de la location</h3>
                            <div class="text-sm text-blue-700 mt-1">
                                <ul class="list-disc list-inside space-y-1">
                                    <li>La location commence immédiatement</li>
                                    <li>L'étudiant sera responsable de l'instrument</li>
                                    <li>Vous pourrez marquer l'instrument comme retourné à tout moment</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="flex justify-end gap-4 pt-6 border-t border-gray-200">
                    <a href="{{ path('app_instrument_show', {id: instrument.id}) }}" 
                       class="px-6 py-3 border border-gray-300 rounded-lg text-gray-700 font-semibold hover:bg-gray-50 transition-colors">
                        Annuler
                    </a>
                    <button type="submit" 
                            class="px-6 py-3 bg-purple-600 hover:bg-purple-700 text-white rounded-lg font-semibold transition-colors"
                            {% if students|length == 0 %}disabled{% endif %}>
                        Louer l'instrument
                    </button>
                </div>
            </form>
        </div>

        <!-- Informations de l'instrument -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-6">Instrument à louer</h2>
            
            <div class="space-y-4">
                <div class="flex items-center gap-4">
                    <div class="p-3 rounded-full bg-purple-100 text-purple-600">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"/>
                        </svg>
                    </div>
                    <div>
                        <h3 class="font-semibold text-gray-900">{{ instrument.brand }} {{ instrument.model }}</h3>
                        <p class="text-gray-600">{{ instrument.type|title }}</p>
                    </div>
                </div>

                <div class="grid grid-cols-2 gap-4 text-sm">
                    <div>
                        <span class="font-medium text-gray-700">N° série:</span>
                        <p class="text-gray-900 font-mono">{{ instrument.serialNumber }}</p>
                    </div>
                    <div>
                        <span class="font-medium text-gray-700">État:</span>
                        <p class="text-gray-900">{{ instrument.conditionLabel }}</p>
                    </div>
                </div>

                {% if instrument.description %}
                    <div>
                        <span class="font-medium text-gray-700 text-sm">Description:</span>
                        <p class="text-gray-900 text-sm mt-1">{{ instrument.description }}</p>
                    </div>
                {% endif %}

                {% if instrument.additionalInfo %}
                    <div>
                        <span class="font-medium text-gray-700 text-sm">Informations additionnelles:</span>
                        <p class="text-gray-900 text-sm mt-1">{{ instrument.additionalInfo }}</p>
                    </div>
                {% endif %}

                <div class="pt-4 border-t border-gray-200">
                    <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full bg-green-100 text-green-800">
                        ✓ Disponible à la location
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}