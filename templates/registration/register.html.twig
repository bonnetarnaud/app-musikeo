{% extends 'base.html.twig' %}

{% block title %}Inscription - Musikeo{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-purple-50 via-blue-50 to-indigo-100 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div class="text-center">
            <h2 class="text-3xl font-bold text-gray-900 mb-2">
                Créer votre école de musique
            </h2>
            <p class="text-gray-600">Rejoignez Musikeo et commencez à gérer votre école facilement</p>
        </div>

        <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl p-8">
            <!-- Messages flash -->
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-4" role="alert">
                    {{ flash_error }}
                </div>
            {% endfor %}

            {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
                <!-- Nom de l'école -->
                <div>
                    {{ form_label(registrationForm.schoolName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registrationForm.schoolName) }}
                    {{ form_errors(registrationForm.schoolName) }}
                </div>

                <!-- Prénom et Nom -->
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        {{ form_label(registrationForm.firstName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(registrationForm.firstName) }}
                        {{ form_errors(registrationForm.firstName) }}
                    </div>
                    <div>
                        {{ form_label(registrationForm.lastName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(registrationForm.lastName) }}
                        {{ form_errors(registrationForm.lastName) }}
                    </div>
                </div>

                <!-- Email -->
                <div>
                    {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registrationForm.email) }}
                    {{ form_errors(registrationForm.email) }}
                    <p class="mt-1 text-xs text-gray-500">Cet email sera utilisé pour vous connecter en tant qu'administrateur</p>
                </div>

                <!-- Mot de passe -->
                <div>
                    {{ form_label(registrationForm.password, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registrationForm.password) }}
                    {{ form_errors(registrationForm.password) }}
                </div>

                <!-- Bouton de soumission -->
                <div>
                    {{ form_widget(registrationForm.submit) }}
                </div>
            {{ form_end(registrationForm) }}

            <!-- Info abonnement gratuit -->
            <div class="mt-6 p-4 bg-green-50 border border-green-200 rounded-lg">
                <div class="flex items-start">
                    <svg class="h-5 w-5 text-green-500 mt-0.5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    <div class="text-sm text-green-800">
                        <p class="font-medium">Abonnement gratuit inclus</p>
                        <p class="mt-1">✓ Jusqu'à 30 élèves</p>
                        <p>✓ 3 enseignants maximum</p>
                        <p>✓ Toutes les fonctionnalités de base</p>
                    </div>
                </div>
            </div>

            <!-- Lien vers connexion -->
            <div class="text-center">
                <p class="text-sm text-gray-600">
                    Vous avez déjà un compte ?
                    <a href="{{ path('app_login') }}" class="font-medium text-purple-600 hover:text-purple-500">
                        Se connecter
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}