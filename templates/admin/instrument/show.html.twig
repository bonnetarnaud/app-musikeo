{% extends 'app-layout/layout.html.twig' %}

{% block title %}{{ instrument.name }} - Administration{% endblock %}

{% block main_content %}
<div class="p-6">
    <!-- Header -->
    <div class="mb-8">
        <div class="flex items-center gap-4 mb-4">
            <a href="{{ path('app_instrument_index') }}" 
               class="text-gray-600 hover:text-gray-900 transition-colors">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
            </a>
            <h1 class="text-3xl font-bold text-gray-900">{{ instrument.brand }} {{ instrument.model }}</h1>
        </div>
        <p class="text-gray-600">{{ instrument.type|title }} - N° série: {{ instrument.serialNumber }}</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Informations principales -->
        <div class="lg:col-span-2">
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8">
                <h2 class="text-xl font-semibold text-gray-900 mb-6">Informations de l'instrument</h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Type</label>
                        <p class="text-gray-900">{{ instrument.type|title }}</p>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Marque</label>
                        <p class="text-gray-900">{{ instrument.brand }}</p>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Modèle</label>
                        <p class="text-gray-900">{{ instrument.model }}</p>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Numéro de série</label>
                        <p class="text-gray-900 font-mono">{{ instrument.serialNumber }}</p>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">État</label>
                        {% set condition_colors = {
                            'excellent': 'bg-green-100 text-green-800',
                            'good': 'bg-blue-100 text-blue-800',
                            'fair': 'bg-yellow-100 text-yellow-800',
                            'poor': 'bg-orange-100 text-orange-800',
                            'needs_repair': 'bg-red-100 text-red-800'
                        } %}
                        <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full {{ condition_colors[instrument.condition] ?? 'bg-gray-100 text-gray-800' }}">
                            {{ instrument.conditionLabel }}
                        </span>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Disponibilité</label>
                        {% if instrument.isRentable %}
                            <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full bg-green-100 text-green-800">
                                Louable
                            </span>
                        {% else %}
                            <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full bg-gray-100 text-gray-800">
                                Non louable
                            </span>
                        {% endif %}
                    </div>
                </div>

                {% if instrument.description %}
                    <div class="mt-6">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                        <p class="text-gray-900">{{ instrument.description }}</p>
                    </div>
                {% endif %}

                {% if instrument.additionalInfo %}
                    <div class="mt-6">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Informations additionnelles</label>
                        <p class="text-gray-900">{{ instrument.additionalInfo }}</p>
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- Actions et statut -->
        <div class="space-y-6">
            <!-- Statut de location -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Statut de Location</h3>
                
                {% if instrument.isCurrentlyRented %}
                    <div class="space-y-4">
                        <div class="flex items-center gap-3">
                            <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
                            <span class="font-medium text-yellow-700">En location</span>
                        </div>
                        
                        {% if instrument.currentRenter %}
                            <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                                <p class="text-sm font-medium text-yellow-800">Loué à:</p>
                                <p class="text-yellow-900">{{ instrument.currentRenter.fullName }}</p>
                                {% if instrument.rentalStartDate %}
                                    <p class="text-sm text-yellow-700 mt-1">
                                        Depuis le {{ instrument.rentalStartDate|date('d/m/Y') }}
                                    </p>
                                {% endif %}
                            </div>
                            
                            <form method="post" action="{{ path('app_instrument_return', {id: instrument.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir marquer cet instrument comme retourné ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('return' ~ instrument.id) }}">
                                <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-semibold transition-colors">
                                    Marquer comme retourné
                                </button>
                            </form>
                        {% endif %}
                    </div>
                {% elseif instrument.isAvailableForRent %}
                    <div class="space-y-4">
                        <div class="flex items-center gap-3">
                            <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                            <span class="font-medium text-green-700">Disponible</span>
                        </div>
                        
                        <a href="{{ path('app_instrument_rent', {id: instrument.id}) }}" 
                           class="block w-full bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg font-semibold text-center transition-colors">
                            Louer cet instrument
                        </a>
                    </div>
                {% else %}
                    <div class="flex items-center gap-3">
                        <div class="w-3 h-3 bg-gray-400 rounded-full"></div>
                        <span class="font-medium text-gray-600">Non disponible à la location</span>
                    </div>
                {% endif %}
            </div>

            <!-- Actions -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Actions</h3>
                
                <div class="space-y-3">
                    <a href="{{ path('app_instrument_edit', {id: instrument.id}) }}" 
                       class="block w-full bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-semibold text-center transition-colors">
                        Modifier
                    </a>
                    
                    <form method="post" action="{{ path('app_instrument_delete', {id: instrument.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet instrument ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ instrument.id) }}">
                        <button type="submit" class="w-full bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg font-semibold transition-colors">
                            Supprimer
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}