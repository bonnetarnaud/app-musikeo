{% extends 'app-layout/layout.html.twig' %}

{% block title %}Gestion des salles - {{ organization.name }}{% endblock %}

{% block main_content %}
<div class="rooms-management">
    <!-- Header -->
    <div class="rooms-header">
        <div class="rooms-header-content">
            <div class="rooms-title-section">
                <h1 class="rooms-title">
                    <span class="rooms-icon">üè¢</span>
                    Gestion des salles
                </h1>
                <p class="rooms-subtitle">
                    G√©rez les salles et espaces de {{ organization.name }}
                </p>
            </div>
            <div class="rooms-actions">
                <a href="{{ path('app_room_new') }}" class="btn-primary">
                    <span class="btn-icon">‚ûï</span>
                    Nouvelle salle
                </a>
            </div>
        </div>
    </div>

    <!-- Stats -->
    <div class="rooms-stats">
        <div class="stat-card">
            <div class="stat-icon">üè¢</div>
            <div class="stat-content">
                <div class="stat-number">{{ rooms|length }}</div>
                <div class="stat-label">Salles total</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">üë•</div>
            <div class="stat-content">
                <div class="stat-number">
                    {% set totalCapacity = 0 %}
                    {% for room in rooms %}
                        {% set totalCapacity = totalCapacity + room.capacity %}
                    {% endfor %}
                    {{ totalCapacity }}
                </div>
                <div class="stat-label">Capacit√© totale</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">üìÖ</div>
            <div class="stat-content">
                <div class="stat-number">
                    {% set totalLessons = 0 %}
                    {% for room in rooms %}
                        {% set totalLessons = totalLessons + room.lessons|length %}
                    {% endfor %}
                    {{ totalLessons }}
                </div>
                <div class="stat-label">Le√ßons programm√©es</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">üìä</div>
            <div class="stat-content">
                <div class="stat-number">
                    {% if rooms|length > 0 %}
                        {% set totalCapacity = 0 %}
                        {% for room in rooms %}
                            {% set totalCapacity = totalCapacity + room.capacity %}
                        {% endfor %}
                        {{ (totalCapacity / rooms|length)|round(1) }}
                    {% else %}
                        0
                    {% endif %}
                </div>
                <div class="stat-label">Capacit√© moyenne</div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="rooms-filters">
        <form method="GET" class="filters-form">
            <div class="filter-group">
                <label for="search" class="filter-label">Rechercher</label>
                <input 
                    type="text" 
                    id="search" 
                    name="search" 
                    value="{{ search }}" 
                    placeholder="Nom, localisation..."
                    class="filter-input"
                >
            </div>
            <div class="filter-group">
                <label for="capacity" class="filter-label">Capacit√©</label>
                <select id="capacity" name="capacity" class="filter-select">
                    <option value="">Toutes les tailles</option>
                    <option value="small" {{ capacity == 'small' ? 'selected' : '' }}>Petite (‚â§ 5 pers.)</option>
                    <option value="medium" {{ capacity == 'medium' ? 'selected' : '' }}>Moyenne (6-15 pers.)</option>
                    <option value="large" {{ capacity == 'large' ? 'selected' : '' }}>Grande (‚â• 16 pers.)</option>
                </select>
            </div>
            <div class="filter-group">
                <label for="availability" class="filter-label">Disponibilit√©</label>
                <select id="availability" name="availability" class="filter-select">
                    <option value="">Toutes les salles</option>
                    <option value="available" {{ availability == 'available' ? 'selected' : '' }}>Disponible</option>
                    <option value="busy" {{ availability == 'busy' ? 'selected' : '' }}>Tr√®s utilis√©e</option>
                    <option value="empty" {{ availability == 'empty' ? 'selected' : '' }}>Inutilis√©e</option>
                </select>
            </div>
            <div class="filter-actions">
                <button type="submit" class="btn-filter">
                    üîç Filtrer
                </button>
                {% if search or capacity or availability %}
                    <a href="{{ path('app_room_index') }}" class="btn-clear">
                        ‚úñÔ∏è Effacer
                    </a>
                {% endif %}
            </div>
        </form>
    </div>

    <!-- Rooms Grid -->
    <div class="rooms-content">
        {% if rooms|length > 0 %}
            <div class="rooms-grid">
                {% for room in rooms %}
                    <div class="room-card">
                        <!-- Room Header -->
                        <div class="room-header">
                            <div class="room-info">
                                <div class="room-icon">
                                    {% if room.capacity <= 5 %}
                                        üö™
                                    {% elseif room.capacity <= 15 %}
                                        üè†
                                    {% else %}
                                        üè¢
                                    {% endif %}
                                </div>
                                <div class="room-details">
                                    <h3 class="room-name">{{ room.name }}</h3>
                                    <div class="room-capacity">üë• {{ room.capacity }} personnes</div>
                                    {% if room.location %}
                                        <div class="room-location">üìç {{ room.location|slice(0, 50) }}{% if room.location|length > 50 %}...{% endif %}</div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="room-actions">
                                <div class="dropdown">
                                    <button class="dropdown-toggle" data-dropdown-toggle="room-menu-{{ room.id }}">
                                        ‚ãÆ
                                    </button>
                                    <div class="dropdown-menu" id="room-menu-{{ room.id }}">
                                        <a href="{{ path('app_room_show', {'id': room.id}) }}" class="dropdown-item">
                                            üëÅÔ∏è Voir d√©tails
                                        </a>
                                        <a href="{{ path('app_room_edit', {'id': room.id}) }}" class="dropdown-item">
                                            ‚úèÔ∏è Modifier
                                        </a>
                                        <div class="dropdown-divider"></div>
                                        <form method="post" action="{{ path('app_room_delete', {'id': room.id}) }}" class="dropdown-form">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ room.id) }}">
                                            <button type="submit" class="dropdown-item dropdown-item-danger" 
                                                    onclick="return confirm('√ätes-vous s√ªr de vouloir supprimer cette salle ?')">
                                                üóëÔ∏è Supprimer
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Room Stats -->
                        <div class="room-stats">
                            <div class="room-stat">
                                <span class="stat-icon">üìÖ</span>
                                <span class="stat-text">{{ room.lessons|length }} le√ßon(s)</span>
                            </div>
                            <div class="room-stat">
                                <span class="stat-icon">üìä</span>
                                <span class="stat-text">
                                    {% if room.lessons|length == 0 %}
                                        Inutilis√©e
                                    {% elseif room.lessons|length < 5 %}
                                        Disponible
                                    {% else %}
                                        Tr√®s utilis√©e
                                    {% endif %}
                                </span>
                            </div>
                        </div>

                        <!-- Status Badge -->
                        <div class="room-badges">
                            {% if room.lessons|length == 0 %}
                                <span class="status-badge status-empty">üí§ Inutilis√©e</span>
                            {% elseif room.lessons|length < 5 %}
                                <span class="status-badge status-available">‚úÖ Disponible</span>
                            {% else %}
                                <span class="status-badge status-busy">üî• Tr√®s utilis√©e</span>
                            {% endif %}
                            
                            {% if room.capacity <= 5 %}
                                <span class="capacity-badge capacity-small">üö™ Petite</span>
                            {% elseif room.capacity <= 15 %}
                                <span class="capacity-badge capacity-medium">üè† Moyenne</span>
                            {% else %}
                                <span class="capacity-badge capacity-large">üè¢ Grande</span>
                            {% endif %}
                        </div>

                        <!-- Room Footer -->
                        <div class="room-footer">
                            <a href="{{ path('app_room_show', {'id': room.id}) }}" class="btn-outline">
                                Voir planning
                            </a>
                            <a href="{{ path('app_room_edit', {'id': room.id}) }}" class="btn-primary">
                                Modifier
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="empty-state">
                <div class="empty-icon">üè¢</div>
                <h3 class="empty-title">Aucune salle trouv√©e</h3>
                <p class="empty-description">
                    {% if search or capacity or availability %}
                        Aucune salle ne correspond √† vos crit√®res de recherche.
                    {% else %}
                        Vous n'avez pas encore de salles configur√©es. Commencez par ajouter votre premi√®re salle.
                    {% endif %}
                </p>
                {% if not search and not capacity and not availability %}
                    <a href="{{ path('app_room_new') }}" class="btn-primary">
                        <span class="btn-icon">‚ûï</span>
                        Ajouter la premi√®re salle
                    </a>
                {% endif %}
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}