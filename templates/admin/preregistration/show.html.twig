{% extends 'app-layout/layout.html.twig' %}

{% block title %}Préinscription de {{ preRegistration.fullName }} - Administration{% endblock %}


{% block main_content %}
<div class="mb-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Préinscription de {{ preRegistration.fullName }}</h1>
            <p class="text-gray-600">Demande reçue le {{ preRegistration.createdAt|date('d/m/Y à H:i') }}</p>
        </div>
        <a href="{{ path('app_preregistration_index') }}" class="bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-2 rounded-md text-sm font-medium">
            ← Retour à la liste
        </a>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Information -->
    <div class="lg:col-span-2 space-y-6">
        <!-- Personal Information -->
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Informations personnelles</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-500">Prénom</label>
                    <p class="text-sm text-gray-900">{{ preRegistration.firstname }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500">Nom</label>
                    <p class="text-sm text-gray-900">{{ preRegistration.lastname }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500">Email</label>
                    <p class="text-sm text-gray-900">
                        <a href="mailto:{{ preRegistration.email }}" class="text-blue-600 hover:text-blue-800">
                            {{ preRegistration.email }}
                        </a>
                    </p>
                </div>
                {% if preRegistration.phone %}
                <div>
                    <label class="block text-sm font-medium text-gray-500">Téléphone</label>
                    <p class="text-sm text-gray-900">
                        <a href="tel:{{ preRegistration.phone }}" class="text-blue-600 hover:text-blue-800">
                            {{ preRegistration.phone }}
                        </a>
                    </p>
                </div>
                {% endif %}
                {% if preRegistration.dateOfBirth %}
                <div>
                    <label class="block text-sm font-medium text-gray-500">Date de naissance</label>
                    <p class="text-sm text-gray-900">
                        {{ preRegistration.dateOfBirth|date('d/m/Y') }}
                        {% if preRegistration.age %}
                            ({{ preRegistration.age }} ans)
                        {% endif %}
                    </p>
                </div>
                {% endif %}
                {% if preRegistration.address %}
                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-gray-500">Adresse</label>
                    <p class="text-sm text-gray-900">{{ preRegistration.address }}</p>
                </div>
                {% endif %}
            </div>
        </div>

        <!-- Parent Information (if minor) -->
        {% if preRegistration.isMinor and (preRegistration.parentName or preRegistration.parentEmail or preRegistration.parentPhone) %}
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Informations du parent/tuteur</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                {% if preRegistration.parentName %}
                <div>
                    <label class="block text-sm font-medium text-gray-500">Nom du parent/tuteur</label>
                    <p class="text-sm text-gray-900">{{ preRegistration.parentName }}</p>
                </div>
                {% endif %}
                {% if preRegistration.parentEmail %}
                <div>
                    <label class="block text-sm font-medium text-gray-500">Email du parent</label>
                    <p class="text-sm text-gray-900">
                        <a href="mailto:{{ preRegistration.parentEmail }}" class="text-blue-600 hover:text-blue-800">
                            {{ preRegistration.parentEmail }}
                        </a>
                    </p>
                </div>
                {% endif %}
                {% if preRegistration.parentPhone %}
                <div>
                    <label class="block text-sm font-medium text-gray-500">Téléphone du parent</label>
                    <p class="text-sm text-gray-900">
                        <a href="tel:{{ preRegistration.parentPhone }}" class="text-blue-600 hover:text-blue-800">
                            {{ preRegistration.parentPhone }}
                        </a>
                    </p>
                </div>
                {% endif %}
            </div>
        </div>
        {% endif %}

        <!-- Musical Information -->
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Informations musicales</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-500">Instrument souhaité</label>
                    <p class="text-sm text-gray-900">{{ preRegistration.interestedInstrument|title }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500">Niveau</label>
                    <p class="text-sm text-gray-900">{{ preRegistration.level|title }}</p>
                </div>
                {% if preRegistration.message %}
                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-gray-500">Message</label>
                    <p class="text-sm text-gray-900 whitespace-pre-line">{{ preRegistration.message }}</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
        <!-- Status Card -->
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Statut</h3>
            
            <div class="mb-4">
                {% if preRegistration.status == 'pending' %}
                    <span class="inline-flex px-3 py-2 text-sm font-semibold bg-yellow-100 text-yellow-800 rounded-full">
                        En attente
                    </span>
                {% elseif preRegistration.status == 'contacted' %}
                    <span class="inline-flex px-3 py-2 text-sm font-semibold bg-blue-100 text-blue-800 rounded-full">
                        Contacté
                    </span>
                {% elseif preRegistration.status == 'enrolled' %}
                    <span class="inline-flex px-3 py-2 text-sm font-semibold bg-green-100 text-green-800 rounded-full">
                        Inscrit
                    </span>
                {% elseif preRegistration.status == 'rejected' %}
                    <span class="inline-flex px-3 py-2 text-sm font-semibold bg-red-100 text-red-800 rounded-full">
                        Refusé
                    </span>
                {% endif %}
            </div>

            {% if preRegistration.contactedAt %}
                <p class="text-sm text-gray-600 mb-4">
                    Contacté le {{ preRegistration.contactedAt|date('d/m/Y à H:i') }}
                </p>
            {% endif %}

            <!-- Update Status Form -->
            <form method="post" action="{{ path('app_preregistration_update_status', {id: preRegistration.id}) }}" class="space-y-4">
                <div>
                    <label for="status" class="block text-sm font-medium text-gray-700">Changer le statut</label>
                    <select name="status" id="status" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                        {% for statusKey, statusLabel in preRegistration.availableStatuses %}
                            <option value="{{ statusKey }}" {{ statusKey == preRegistration.status ? 'selected' : '' }}>
                                {{ statusLabel }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                <div>
                    <label for="notes" class="block text-sm font-medium text-gray-700">Notes (optionnel)</label>
                    <textarea name="notes" id="notes" rows="3" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Ajouter des notes...">{{ preRegistration.notes }}</textarea>
                </div>

                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-md text-sm font-medium">
                    Mettre à jour
                </button>
            </form>
        </div>

        <!-- Quick Actions -->
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Actions rapides</h3>
            <div class="space-y-3">
                <a href="mailto:{{ preRegistration.email }}" class="w-full bg-green-600 hover:bg-green-700 text-white py-2 px-4 rounded-md text-sm font-medium text-center block">
                    Envoyer un email
                </a>
                {% if preRegistration.phone %}
                <a href="tel:{{ preRegistration.phone }}" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-md text-sm font-medium text-center block">
                    Appeler
                </a>
                {% endif %}
                {% if preRegistration.parentEmail and preRegistration.isMinor %}
                <a href="mailto:{{ preRegistration.parentEmail }}" class="w-full bg-purple-600 hover:bg-purple-700 text-white py-2 px-4 rounded-md text-sm font-medium text-center block">
                    Contacter le parent
                </a>
                {% endif %}
            </div>
        </div>

        <!-- Delete -->
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Zone de danger</h3>
            <form method="post" action="{{ path('app_preregistration_delete', {id: preRegistration.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette préinscription ?')">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ preRegistration.id) }}">
                <button type="submit" class="w-full bg-red-600 hover:bg-red-700 text-white py-2 px-4 rounded-md text-sm font-medium">
                    Supprimer la préinscription
                </button>
            </form>
        </div>

        <!-- Timeline -->
        {% if preRegistration.notes %}
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Notes</h3>
            <div class="text-sm text-gray-700 whitespace-pre-line">{{ preRegistration.notes }}</div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}