{% extends 'base.html.twig' %}

{% block title %}Accueil - Musikeo{% endblock %}

{% block body %}
<div class="home-container">
    <h1>Bienvenue sur Musikeo</h1>
    
    {% if app.user %}
        <div class="welcome-message">
            <h2>Bonjour {{ app.user.email }} !</h2>
            <p>Vous êtes connecté avec succès.</p>
        </div>
    {% else %}
        <div class="welcome-message">
            <h2>Connectez-vous pour accéder à votre espace</h2>
            <a href="{{ path('app_login') }}" class="btn btn-primary">Se connecter</a>
        </div>
    {% endif %}
</div>

<style>
.home-container {
    text-align: center;
    padding: 2rem;
}

.welcome-message {
    margin-top: 2rem;
    padding: 2rem;
    background-color: #f8f9fa;
    border-radius: 8px;
}

.btn {
    padding: 0.5rem 1rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    margin-top: 1rem;
}

.btn-primary {
    background-color: #007bff;
    color: white;
}

.navbar {
    background-color: #f8f9fa;
    padding: 1rem 0;
    margin-bottom: 2rem;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
}

.navbar .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.navbar-brand {
    font-size: 1.5rem;
    font-weight: bold;
    text-decoration: none;
    color: #333;
}

.navbar-nav {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.btn-outline {
    background-color: transparent;
    color: #007bff;
    border: 1px solid #007bff;
}
</style>
{% endblock %}